<Window x:Class="BillProject.VidioPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BillProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650"
        >


    <Grid OpacityMask="#FF8DA9FF">
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/배경.PNG"/>
        </Grid.Background>
        <Image Name="Cam_1" Source="{Binding Camimage}"  OpacityMask="#FF060606" Margin="60,49,60,94" Height="300" Width="500"/>
        <!--둥근 테두리 버튼 (200)-->
        <Button x:Name="upload" Content="upload" Margin="509,277,29,45" BorderBrush="{x:Null}" Opacity="0.7" Command="{Binding Upload}" Foreground="#FF634B4B" FontSize="24" FontWeight="Bold" FontFamily="Segoe Print">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="200"/>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="/Resources/버튼.jpg"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>